<h1 style="margin-top:100px;">管理者ホーム</h1>
<h2><%=@employee.username%>さんの設定</h2>
<%= form_for(@employee, url: admin_user_edit_path, html: {method: 'PATCH'}) do |f| %>
<%= f.hidden_field :id, :value => @employee.id %>
  <label class="control-label" for="">名前</label>
  <%= f.text_field :username, class: 'form-control'%>
  <label class="control-label" for="">給料</label>
  <%= f.number_field :salary, class: 'form-control'%>
  <%= f.submit '編集', class: 'btn btn-success' %>
<% end %>
